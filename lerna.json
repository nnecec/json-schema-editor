{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish"
    },
    "version": {
      "message": "chore(release): publish new version"
    }
  },
  "bootstrap": {
    "npmClientArgs": ["--no-package-lock"]
  }
}
